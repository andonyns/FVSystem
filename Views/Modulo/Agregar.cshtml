
@{
    ViewBag.Title = "Modulo";
}
@model FVSystem.Models.ModulosCurso
<div class="formulario">
    <h2>Modulo</h2>

    @section Styles {
        <link href="~/css/formulario.css" rel="stylesheet" />
    }

    @section script {
        <script src="~/js/VerificarSeleccionado.js"></script>
    }

    @using (Html.BeginForm("Guardar", "Modulo", FormMethod.Post))
    {


        <div>Nombre:</div>


        <input type="text" name="Nombre" value="">

        <div>FechaInicio: </div>

        <input type="date" name="FechaInicio" value="">

        <div>FechaFinal: </div>

        <input type="date" name="FechaFinal" value="">

        <div>Curso: </div>

        <select name="IdCurso">
            <option value="">Selecione el curso</option>

            @foreach (var curso in Model.ListaCursos)
            {
                <option value="@curso.Id" selected="isSelected(@curso.Id, @Model.CursoId)">@curso.Nombre </option>
            }
        </select>

        <input type="submit" value="Agregar">
    }
</div>